doctype html
html(lang="en")
    head
        meta(charset='UTF-8')
        meta(name='viewport' content='width=device-width, initial-scale=1.0')
        title e-commerce
        link(rel='preconnect' href='https://fonts.googleapis.com')
        link(rel='preconnect' href='https://fonts.gstatic.com' crossorigin='')
        link(href='https://fonts.googleapis.com/css2?family=Bebas+Neue&display=swap' rel='stylesheet')
        link(href='https://api.fontshare.com/v2/css?f[]=satoshi@400&display=swap' rel='stylesheet')
        link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css")
        link(rel='stylesheet' href='css/style.css')
    body
        include ./pug/layout/nav.pug

        ol.breadcrumb.product(style="padding:20px 5%")
            li.breadcrumb-item
                a.text-decoration-none.text-muted(href="#") Home
            li.breadcrumb-item
                a.text-decoration-none.text-muted(href="#") Shop
            li.breadcrumb-item
                a.text-decoration-none.text-muted(href="#") Men
            li.breadcrumb-item.active(aria-current="page") T-shirts
    .gallery
        .main-image
            img(src="dist/assets/images/T-SHIRT-WITH-TAPE-DETAILS.svg" alt="Main product image")
        .thumbnails
            .thumbnail.active
                img(src="dist/assets/images/T-SHIRT-WITH-TAPE-DETAILS.svg" alt="Front view")
            .thumbnail
                img(src="images/tshirt-back.jpg" alt="Back view")
            .thumbnail
                img(src="images/tshirt-model.jpg" alt="Model wearing")
    // Product Info
    .product-info
        h1 ONE LIFE GRAPHIC T-SHIRT
        // Rating
        .rating
            .stars ⭐⭐⭐⭐⭐
            span 4.5/5
        // Price
        .price
            span.current $260
            span.old $300
            span.discount -40%
        // Description
        p.description
            | This graphic t-shirt which is perfect for any occasion. Crafted from a soft and breathable fabric, it offers superior comfort and style.
        // Colors
        .colors
            label Select Colors:
            .color-option.active(style="background: #4B3A2F;")
            .color-option(style="background: #2E4D44;")
            .color-option(style="background: #2F2E4D;")
        // Sizes
        .sizes
            label Choose Size:
            .size-option Small
            .size-option Medium
            .size-option.active Large
            .size-option X-Large
        // Add to Cart
        .add-to-cart
            .quantity
                button -
                span 1
                button +
            button.cart-btn Add to Cart







            //-footer
            include ./pug/layout/footer.pug
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js")