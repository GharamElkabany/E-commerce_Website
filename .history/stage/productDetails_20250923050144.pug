doctype html
html(lang="en")
    head
        meta(charset='UTF-8')
        meta(name='viewport' content='width=device-width, initial-scale=1.0')
        title e-commerce
        link(rel='preconnect' href='https://fonts.googleapis.com')
        link(rel='preconnect' href='https://fonts.gstatic.com' crossorigin='')
        link(href='https://fonts.googleapis.com/css2?family=Bebas+Neue&display=swap' rel='stylesheet')
        link(href='https://api.fontshare.com/v2/css?f[]=satoshi@400&display=swap' rel='stylesheet')
        link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css")
        link(rel='stylesheet' href='css/style.css')
    body
        include ./pug/layout/nav.pug

        ol.breadcrumb.product
            li.breadcrumb-item
                a.text-decoration-none.text-muted(href="index.html") Home
            li.breadcrumb-item
                a.text-decoration-none.text-muted(href="#") Shop
            li.breadcrumb-item
                a.text-decoration-none.text-muted(href="category.html") Men
            li.breadcrumb-item.active(aria-current="page") T-shirts
    
    // Product Section
    .container
        .row.g-5
            // Left column: Gallery
            .col-lg-6
                .gallery
                    // Thumbnails
                    .thumbnails
                        img.product-thumbnail.active(src="./assets/images/One-Life-Graphic-T-shirt-1.svg" alt="Thumb1" )
                        img.product-thumbnail(src="./assets/images/One-Life-Graphic-T-shirt-2.svg" alt="Thumb2" )
                        img.product-thumbnail(src="./assets/images/One-Life-Graphic-T-shirt-3.svg" alt="thumb3" )

                    // Main image
                    .main-image
                        img(src="./assets/images/One-Life-Graphic-T-shirt-1.svg" alt="Main")
            
            // Right column: Product Info
            .col-lg-6.product-info
                h1.product-little.fw-bold.mb-3 One Life Graphic T-shirt
                // Rating
                .d-flex.align-items-center.mb-3.product-rating
                    .stars.text-warning.me-2 ★★★★★
                    small.review-count.text-muted (120 reviews)
                // Price
                .mb-3
                    span.current-price.fw-bold.fs-3.me-2 $260
                    span.old-price.text-decoration-line-through.text-muted.me-2 $300
                    span.discount.badge.bg-danger -40%
                // Description
                p.text-muted.mb-4.product-description
                    | This graphic t-shirt is perfect for any occasion. Crafted from soft breathable fabric, it offers superior comfort and style.
                // Colors
                .mb-4.product-colors
                    label.form-label.fw-semibold.colors-label Colors
                    br
                    button.btn.btn-sm.rounded-circle.border.me-2.color-option.brow(style="width:35px;height:35px;background:#5c4d3b;")
                    button.btn.btn-sm.rounded-circle.border.me-2.color-option.green(style="width:35px;height:35px;background:#2e5248;")
                    button.btn.btn-sm.rounded-circle.border.color-option.navy(style="width:35px;height:35px;background:#26294d;")
                // Sizes
                .product-sizes.mb-4
                    label.form-label.fw-semibold.sizes-label Size
                    br
                    .btn-group.size-options(role="group")
                        button.size-button.btn.btn-outline-secondary(type="button" style="margin:5px;border-radius:20px;background-color: #F0F0F0;border: #F0F0F0") S
                        button.size-button.btn.btn-outline-secondary(type="button" style="margin:5px;border-radius:20px;background-color: #F0F0F0;border: #F0F0F0") M
                        button.size-button.btn.btn-dark(type="button" style="margin:5px;border-radius:10px;border: #F0F0F0") L
                        button.size-button.btn.btn-outline-secondary(type="button" style="margin:5px;border-radius:20px;background-color: #F0F0F0;border: #F0F0F0") XL
                // Quantity + Cart
                .d-flex.align-items-center.gap-3.product-actions
                    .input-group.quantity-wrapper.rounded-pill.overflow-hidden(style="width:160px; border-radius:20px; overflow:hidden;")
                       button.btn.btn-outline-secondary.quantity-btn (type="button" style="min-width:40px; border-radius:0;") -
                       input.form-control.text-center.border-0(type="text" value="1"  style="border:none; outline:none; box-shadow:none")
                       button.btn.btn-outline-secondary.quantity-btn(type="button" style="min-width:40px; border-radius:0;") +
                    a.add-to-cart.btn.btn-dark.flex-grow-1(href="cart.html" style="border-radius:20px; padding:10px 20px;") Add to Cart


        // Product Details Tabs Section
        .row.mt-5
            .col-12
                .product-tabs
                    // Tab Navigation
                    ul.nav.nav-underline.justify-content-start.border-bottom.mb-4(id="productTabs" role="tablist")
                        li.nav-item(role="presentation")
                            button.nav-link.active.fw-semibold(id="details-tab" data-bs-toggle="tab" data-bs-target="#details" type="button" role="tab") Product Details
                        li.nav-item(role="presentation")
                            button.nav-link.fw-semibold(id="reviews-tab" data-bs-toggle="tab" data-bs-target="#reviews" type="button" role="tab") Rating & Reviews
                        li.nav-item(role="presentation")
                            button.nav-link.fw-semibold(id="faqs-tab" data-bs-toggle="tab" data-bs-target="#faqs" type="button" role="tab") FAQs
                    
                    // Tab Content
                    .tab-content(id="productTabsContent")

                        // Reviews Tab
                        .tab-pane.fade(id="reviews" role="tabpanel")
                            .d-flex.justify-content-between.align-items-center.mb-4
                                h5.mb-0 All Reviews (451)
                                .d-flex.gap-2
                                    .dropdown
                                        button.btn.btn-outline-secondary.btn-sm.dropdown-toggle(type="button" data-bs-toggle="dropdown") Latest
                                        ul.dropdown-menu
                                            li: a.dropdown-item(href="#") Latest
                                            li: a.dropdown-item(href="#") Oldest
                                            li: a.dropdown-item(href="#") Highest Rating
                                            li: a.dropdown-item(href="#") Lowest Rating
                                    button.btn.btn-dark.btn-sm Write a Review
                            
                            // Review Items - Bootstrap Grid
                            .row.g-4
                                .col-lg-6.col-12
                                    .review-card.h-100
