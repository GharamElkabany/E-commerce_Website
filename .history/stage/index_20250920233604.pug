doctype html
html(lang="en")
    head
        meta(charset='UTF-8')
        meta(name='viewport' content='width=device-width, initial-scale=1.0')
        title e-commerce
        link(rel='preconnect' href='https://fonts.googleapis.com')
        link(rel='preconnect' href='https://fonts.gstatic.com' crossorigin='')
        link(href='https://fonts.googleapis.com/css2?family=Bebas+Neue&display=swap' rel='stylesheet')
        link(href='https://api.fontshare.com/v2/css?f[]=satoshi@400&display=swap' rel='stylesheet')
        link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css")
        link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css")
        link(rel='stylesheet' href='css/style.css')
    body
        //- navbar
        include ./pug/layout/nav.pug

        // home-section
        .container-fluid.home-section.pt-5
            .row.d-flex.justify-content-between
                .col-11.col-xl-5.mx-5.px-5
                    .row.row-col-1
                        h1 FIND CLOTHES THAT MATCHES YOUR STYLE
                    .row.row-col-1.pe-lg-5
                        p.pe-lg-5 Browse through our diverse range of meticulously crafted garments, designed to bring out your individuality and cater to your sense of style.
                    .row.row-cols-1.row-cols-md-3
                        button.mb-4 
                            a(href="prod.html") Shop Now
                    .row.row-cols-2.row-cols-md-3
                        .hero-number.d-flex.flex-column 200+
                            span International Brands 
                        
                        .hero-number.d-flex.flex-column 2,000+ 
                            span High-Quality Products 
                        
                        .hero-number.d-flex.flex-column 30,000+ 
                            span Happy Customers
                .col-11.col-xl-6.hero-img.overflow-hidden.position-relative
                    img.couple(src="./assets/images/trendy-fashionable-couple-posing.svg", alt="couple-posing")
                    .big-star.position-absolute 
                        img(src="./assets/home/icons/big-star.svg", alt="big-star")
                    .small-star.position-absolute
                        img(src="./assets/home/icons/small-star.svg", alt="small-star")    

        //- new-arrival-section


        //- top-selling-section


        //- dress-style-section


        //- customers-section


        //- footer
        include ./pug/layout/footer.pug

    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js")