// Top black strip
.top-strip.bg-dark.text-center.text-white.py-1 
    |Sign up and get 20% off to your first order. 
    a.text-white(href="#") Sign Up Now
    button.btn-close.btn-close-white.float-end.me-3(aria-label="Close")

// Navbar
nav.navbar.navbar-expand-sm.bg-white.container-fluid
    // Brand with toggler (hamburger)
    button.navbar-toggler.border-0(type="button", data-bs-toggle="collapse", data-bs-target="#navbarNav")
        i.bi.bi-list.fs-3
    a.navbar-brand.fw-bold.ms-2(href="#") SHOP.CO



    // Collapsible menu
    #navbarNav.collapse.navbar-collapse.mt-lg-0
        ul.navbar-nav.me-auto.mb-2.mb-lg-0
            li.nav-item.dropdown.ms-md-3.ms-lg-5.ms-sm-0
                a.nav-link.dropdown-toggle(href="#", role="button", data-bs-toggle="dropdown") Shop
                ul.dropdown-menu
                    li: a.dropdown-item(href="#") Men
                    li: a.dropdown-item(href="#") Women
                    li: a.dropdown-item(href="#") Kids
            li.nav-item
                a.nav-link(href="#") On Sale
            li.nav-item
                a.nav-link(href="#") New Arrivals
            li.nav-item
                a.nav-link(href="#") Brands

    // Search bar visible only in desktop
    // Search bar
    form.search-form.d-none.d-sm-flex.mx-auto(role="search")
        i.bi.bi-search.search-icon
        input.search-input(type="search" placeholder="Search for products..." name="search" aria-label="Search")

    
    // Right icons
    .d-flex.ms-3
        a.nav-link.px-2.d-sm-none(href="#")
            img.nav-icon(src="assets/images/search-icon.svg" alt="Search")
        a.nav-link.px-2(href="cart.html")
            img.nav-icon(src="assets/images/cart-icon.svg" alt="Cart")
        a.nav-link.px-2(href="#")
            img.nav-icon(src="assets/images/profile-icon.svg" alt="Profile")


    
