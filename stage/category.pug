    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-sRIl4kxILFvY47J16cr9ZwB07vP4J8+LH7qKQnuqkuIAvNWLzeN8tE5YBujZqJLB" crossorigin="anonymous")
    link(href="https://fonts.googleapis.com/css2?family=Bebas+Neue&display=swap" rel="stylesheet")
    link(href="https://api.fontshare.com/v2/css?f[]=satoshi@400&display=swap" rel="stylesheet")
    link(rel="stylesheet", href="css/style.css")

  body
    nav nav place
    hr
    .container.py-5
      .row
        .col-3
          form.py-3.px-1.border.rounded-4
            // Filter header
            .d-flex.align-items-center.justify-content-between.mb-3.mx-3.border-bottom.pb-4
              h4.mb-0 Filters
              img(src="./assets/icons/filter-icon.svg", alt="Filter")
              // button.btn.btn-light.p-1
              //   img(src="./assets/icons/filter-icon.svg", alt="Filter", width="20", height="20")

            .mb-4.pb-2.mx-3.border-bottom
              ul.list-group.filter-category-list.list-group-flush
                li.list-group-item.d-flex.justify-content-between.align-items-center.py-1.px-0
                  | T-shirts
                  img(src="./assets/icons/right-arrow.svg", alt=">")
                li.list-group-item.d-flex.justify-content-between.align-items-center.py-1.px-0
                  | Shorts
                  img(src="./assets/icons/right-arrow.svg", alt=">")
                li.list-group-item.d-flex.justify-content-between.align-items-center.py-1.px-0
                  | Shirts
                  img(src="./assets/icons/right-arrow.svg", alt=">")
                li.list-group-item.d-flex.justify-content-between.align-items-center.py-1.px-0
                  | Hoodie
                  img(src="./assets/icons/right-arrow.svg", alt=">")
                li.list-group-item.d-flex.justify-content-between.align-items-center.py-1.px-0
                  | Jeans
                  img(src="./assets/icons/right-arrow.svg", alt=">")

            // Price
            .d-flex.justify-content-between.align-items-center.mt-2.mb-3.px-3
              h4.mb-0 Price
              button.btn.p-0.border-0.bg-transparent(type="button", data-bs-toggle="collapse", data-bs-target="#priceCollapse", aria-expanded="true", aria-controls="priceCollapse")
                img(src="./assets/icons/down-arrow.svg", alt="v")

            // Price Content
            #priceCollapse.collapse.show.mb-4.mx-3.border-bottom.pb-2
              input#priceRange.form-range.mb-2(type="range", min="50", max="1000", value="60", step="10")
              .d-flex.justify-content-center
                p.text-muted
                  | From 
                  span $50 
                  | to 
                  span $
                  output#rangeValue(for="priceRange", aria-hidden="true")

            // Color
            .d-flex.justify-content-between.align-items-center.mb-3.px-3
              h4.mb-0 Colors
              button.btn.p-0.border-0.bg-transparent(type="button", data-bs-toggle="collapse", data-bs-target="#colorCollapse", aria-expanded="true", aria-controls="colorCollapse")
                img(src="./assets/icons/down-arrow.svg", alt="v")

            // Color Content
            #colorCollapse.collapse.show.mb-4.mx-3.border-bottom.pb-3
              .d-flex.flex-wrap.gap-2
                .rounded-circle.border.color-circles(style="background:var(--color-green);")
                .rounded-circle.border.color-circles(style="background:var(--color-red);")
                .rounded-circle.border.color-circles(style="background:var(--color-yellow);")
                .rounded-circle.border.color-circles(style="background:var(--color-orange);")
                .rounded-circle.border.color-circles(style="background:var(--color-cyan);")
                .rounded-circle.border.color-circles(style="background:var(--color-blue);")
                .rounded-circle.border.color-circles(style="background:var(--color-violet);")
                .rounded-circle.border.color-circles(style="background:var(--color-pink);")
                .rounded-circle.border.color-circles(style="background:var(--color-white);")
                .rounded-circle.border.color-circles(style="background:var(--color-black);")

            // Size
            .d-flex.justify-content-between.align-items-center.mb-3.px-3
              h4.mb-0 Size
              button.btn.p-0.border-0.bg-transparent(type="button", data-bs-toggle="collapse", data-bs-target="#sizeCollapse", aria-expanded="true", aria-controls="sizeCollapse")
                img(src="./assets/icons/down-arrow.svg", alt="v")

            // Sizes Content
            #sizeCollapse.collapse.show.mb-4.mx-3.border-bottom.pb-3
              .d-flex.flex-wrap.gap-2
                button.btn.btn-secondary.size-btn.py-2.px-3.rounded-5(type="button") XX-Small
                button.btn.btn-secondary.size-btn.py-2.px-3.rounded-5(type="button") X-Small
                button.btn.btn-secondary.size-btn.py-2.px-3.rounded-5(type="button") Small
                button.btn.btn-secondary.size-btn.py-2.px-3.rounded-5(type="button") Medium
                button.btn.btn-secondary.size-btn.py-2.px-3.rounded-5(type="button") Large
                button.btn.btn-secondary.size-btn.py-2.px-3.rounded-5(type="button") X-Large
                button.btn.btn-secondary.size-btn.py-2.px-3.rounded-5(type="button") XX-Large
                button.btn.btn-secondary.size-btn.py-2.px-3.rounded-5(type="button") 3X-Large
                button.btn.btn-secondary.size-btn.py-2.px-3.rounded-5(type="button") 4X-Large

            // Dress style header
            .d-flex.align-items-center.justify-content-between.mb-2.px-3
              h4.mb-0 Dress Style
              button.btn.p-0.border-0.bg-transparent(type="button", data-bs-toggle="collapse", data-bs-target="#dressStyleCollapse", aria-expanded="true", aria-controls="dressStyleCollapse")
                img(src="./assets/icons/down-arrow.svg", alt="v")

            // Dress style content
            #dressStyleCollapse.collapse.show.mb-2.mx-3
              ul.list-group.filter-category-list.list-group-flush
                li.list-group-item.d-flex.justify-content-between.align-items-center.py-1.px-0
                  | Casual
                  img(src="./assets/icons/right-arrow.svg", alt=">")
                li.list-group-item.d-flex.justify-content-between.align-items-center.py-1.px-0
                  | Formal
                  img(src="./assets/icons/right-arrow.svg", alt=">")
                li.list-group-item.d-flex.justify-content-between.align-items-center.py-1.px-0
                  | Party
                  img(src="./assets/icons/right-arrow.svg", alt=">")
                li.list-group-item.d-flex.justify-content-between.align-items-center.py-1.px-0
                  | Gym
                  img(src="./assets/icons/right-arrow.svg", alt=">")

            // Apply filter button
            .d-flex.justify-content-center.mx-3
              button.btn.btn-dark.bg-black.rounded-5.w-100.p-2.my-2(type="button") Apply Filter

        // Products area
        .col-9
          // .d-flex.align-items-center.justify-content-between.mb-3
          //   h4.mb-0 Casual
          //   i.bi.bi-sliders // Bootstrap icon

    script.
      // Script for range input in price section in the filter
      const rangeInput = document.getElementById('priceRange');
      const rangeOutput = document.getElementById('rangeValue');

      rangeOutput.textContent = rangeInput.value;

      rangeInput.addEventListener('input', function () {
        rangeOutput.textContent = this.value;
      });

    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js")
